@model MusicStoreEntity.PeopleAddress
@{
    ViewBag.Title = "Addaddress";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h3>地址信息</h3>
<hr />
@using (Html.BeginForm("AddressInfo", "My", FormMethod.Post, new { role = "form" }))
{
    <div class="input-group">
        <span class="input-group-addon">收件人</span>
        <input type="text" class="form-control" placeholder="PeopleAddress">
    </div>
    <span>@Html.ValidationMessageFor(x => x.Name)</span>
    <br />
    <div class="input-group">
        <span class="input-group-addon">电话</span>
        <input type="text" class="form-control" placeholder="MobileNumber">
    </div>
    <span>@Html.ValidationMessageFor(x => x.MobileNumber)</span>
    <br />
    <div class="input-group">
        <span class="input-group-addon">收件地址</span>
        <input type="text" class="form-control" placeholder="Address">
    </div>
    <span>@Html.ValidationMessageFor(x => x.Address)</span>
    <br />
    <button type="submit" class="btn btn-success">保存</button>
    @Html.ActionLink("返回", "AddressInfo", "My", new { @class = "btn btn-default" })
}