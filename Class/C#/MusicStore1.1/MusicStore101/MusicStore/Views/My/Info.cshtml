@model MusicStore.ViewModels.InfoViewModel
@{
    ViewBag.Title = "个人资料";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    int year = 0;
    int month = 0;
    int min = 0;
}

<h3>个人信息</h3>
<hr />
<form  role="form">
    <div class="form-inline">
        <div class="form-group">
            <label for="name">姓氏：</label><input type="text" class="form-control" id="name"
                   placeholder="First Name">
        </div>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <div class="form-group">
            <label for="name">名字：</label><input type="text" class="form-control" id="name"
                   placeholder="Last Name">
        </div>
    </div>
    <br />
    <div class="form-inline">
        <div class="form-group">
            <label for="name">生日：</label>
            <select class="form-control">
                @for (int y = 1920; y <= DateTime.Now.Year; y++)
                {
                    <option value="@y">@y</option>
                }
            </select>
            &nbsp;年&nbsp;
            <select class="form-control">
                @for (int m = 1; m <= 12; m++)
                {
                    <option value="@m" >@m</option>
                }
            </select>&nbsp;月&nbsp;
            <select class="form-control">
                <option>1</option>
            </select>&nbsp;日&nbsp;
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-default">保存</button>
</form>
