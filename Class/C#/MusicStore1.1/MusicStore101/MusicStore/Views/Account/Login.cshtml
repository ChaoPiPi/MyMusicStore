@model MusicStore.ViewModels.LoginViewModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h3>用户登录</h3>
<p>如果没有用户名请点击一下<a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">这里</a></p>
<hr />
<div class="panel-group" id="accordion">
    <div class="panel panel-default  panel-primary">
        @*登录*@
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion"
                   href="#collapseOne">
                    登录
                </a>
            </h4>
        </div>

        <div id="collapseOne" class="panel-collapse collapse in">
            @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "bs-example bs-example-form", role = "form" }))
            {
                <div class="panel-body">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        @Html.TextBoxFor(x => x.UserName, new { placeholder = "UserName", @class = "form-control" })
                    </div>
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.UserName)</span>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        @Html.PasswordFor(x => x.PassWord, new { placeholder = "PassWord", @class = "form-control" })
                    </div>
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.PassWord)</span>
                    <br>
                    <input type="submit" class="btn btn-primary" value="登录" />
                </div>
            }
        </div>

    </div>
    @*注册*@
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion"
                   href="#collapseTwo">
                    注册新用户
                </a>
            </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse">
            <div class="panel-body">
                <form class="bs-example bs-example-form" role="form">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input type="text" class="form-control" placeholder="UserName">
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                        <input type="text" class="form-control" placeholder="Email">
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        <input type="text" class="form-control" placeholder="PassWord">
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        <input type="text" class="form-control" placeholder="Confirm password again">
                    </div>
                    <br>
                    <input type="submit" class="btn btn-success" value="注册" />
                </form>
            </div>
        </div>
    </div>
</div>
